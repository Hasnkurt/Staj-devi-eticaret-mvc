@model esitem.Models.Email

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Kayit Ol</title>
    <link href="~/web/startbootstrap-sb-admin-gh-pages/dist/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>

<body class="bg-warning">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>

                <div class="container">
                    @using (Html.BeginForm("Index", "İletisim", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">İletişim Formu</h3></div>
                                    <div class="card-body">
                                        @if (TempData["Basarili"] != null)
                                        {

                                            <div class="alert alert-success" role="alert">
                                                <i class="glyphicon glyphicon-thumbs-up"></i>@TempData["Basarili"]
                                            </div>
                                        }

                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputFirstName">Ad</label>
                                                    @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", placeholder = "Adınızı Yazınız" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputFirstName">SoyAdınız</label>
                                                    @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", placeholder = "Soyadınızı Yazınız" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Email</label>
                                            @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", placeholder = "Email Adresinizi Yazınız" })
                                        </div>
                                        <div class="form-group" style="margin-left:-11px;">
                                            <label class="col-md-3 control-label" for="text">Mesajınız</label>
                                            <div class="col-md-12">

                                                @Html.TextAreaFor(model => model.Mesaj, new { @class = "form-control", placeholder = "İletmek İstediginiz Mesajı Yazınız" })

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                Dosya Paylasımı
                                            </label>
                                            <input type="file" name="Resim" />

                                        </div>



                                        <button type="submit" class="btn btn-warning">Gönder</button>

                                    </div>

                                    <div class="card-footer text-center">
                                        <div class="small"><a href="~/Anasayfa/Index">AnaSayfaya Dönmek İçin Lütfen Tıklayınız</a></div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    }
                </div>


            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Güner Pastaneleri &copy;  2021</div>
                        <div>
                            <a href="#">Gizlilik Politikası</a>
                            &middot;
                            <a href="#">Şartlar &amp; Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/web/startbootstrap-sb-admin-gh-pages/dist/js/scripts.js"></script>
</body>
</html>
