@using esitem.Entity
@model IEnumerable<Ürün>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                <li> <a class="totalInCart" href="cart.html"><strong>Total Amount  <span class="badge badge-warning pull-right" style="line-height:18px;">$448.42</span></strong></a></li>
            </ul>
        </div>

        <div class="well well-small alert alert-warning cntr">
            <h2>50% Discount</h2>
            <p>
                only valid for online order. <br><br><a class="defaultBtn" href="#">Click here </a>
            </p>
        </div>
        <div class="well well-small"><a href="#"><img src="assets/img/paypal.jpg" alt="payment method paypal"></a></div>

        <a class="shopBtn btn-block" href="#">Upcoming products <br><small>Click to view</small></a>
        <br>
        <br>
        @Html.Action("_FeaturedÜrünList", "Anasayfa")

    </div>
    <div class="span9">
        <!--
        New Products
        -->
        <div class="well well-small">
            <h3>Ürünler>
            <div class="row-fluid">
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {
                    <li class="span4">
                        <div class="thumbnail">
                            
                            <a href="/Anasayfa/Üründetay/@item.Id"><img src="~/Content/image/@item.İmage" style="max-width:207px; max-height:267px;" alt=""></a>
                            <div class="caption cntr">
                                <p>@item.Name</p>
                                <p><strong> @item.Price ₺</strong></p>
                                <h4><a class="shopBtn" href="/Anasayfa/Üründetay/@item.Id" title="add to cart"> Detay </a></h4>
                             
                                <br class="clr">
                            </div>
                        </div>
                    </li>
                    }
                    
                  
                    
                </ul>
            </div>
   
          


        </div>
    </div>
</div>

