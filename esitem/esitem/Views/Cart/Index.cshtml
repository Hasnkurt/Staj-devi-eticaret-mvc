@model esitem.Models.Cart
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="span12">
        <ul class="breadcrumb">
            <li><a href="/Anasayfa/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active"></li>
        </ul>
        <div class="well well-small">
            @if (Model.CartLines.Count > 0)
            {

                <table class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Adı</th>
                            <th>Açıklama </th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam Fiyat</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {


                            <tr>
                                <td><img width="100" src="~/Content/image/@item.Ürün.İmage" alt=""></td>
                                <td>@item.Ürün.Name</td>
                                <td>@item.Ürün.Description </td>
                                <td>@item.Quantity</td>
                                <td>@item.Ürün.Price ₺</td>

                                <td>
                                    @((item.Ürün.Price * item.Quantity).ToString("c"))
                                </td>
                                <td>
                                    <a href="/Cart/ÜrünSil/@item.Ürün.Id" class="btn btn-default" role="button"><span1 class="icon-remove"></span1>Sil</a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th class="label label-warning" style="display:block">Toplam Tutar : @Model.Total().ToString("c")</th>
                            <th></th>
                        </tr>
                    </tbody>

                </table><br> }

            else
            {
                <div class="alert alert-warning">
                    <p>
                        Sepetinizde Ürün Bulunmamaktadır...
                    </p>
                </div>
            }

            <a href="/Anasayfa/Index" class="shopBtn btn-large"><span class="icon-arrow-left"></span> Alışverişe Devam Et </a>
            <a href="/Cart/Checkout" class="shopBtn btn-large pull-right">Sipariş Ver <span class="icon-arrow-right"></span></a>

        </div>
    </div>
</div>