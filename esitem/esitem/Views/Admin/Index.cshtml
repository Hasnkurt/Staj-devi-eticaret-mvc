@model esitem.Models.StateModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
    </div>

    <!-- Content Row -->
    <div class="row">
        @Html.Action("UserCount","Account")
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Sipariş Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SiparisSayısı</div>

                            <a href="/Order/Index" class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ayrıntılar<i class="fa fa-arrow-alt-circle-right"></i></a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Bekleyen Sipariş Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BekleyenSiparisSayısı</div>
                            <a href="/Order/BekleyenSiparisler" class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ayrıntılar<i class="fa fa-arrow-alt-circle-right"></i></a>

                        </div>
                        <div class="col-auto">
                            <i class="fas fa-pause text-gray-500"></i>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tamamlanan Sipariş Sayısı
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.TamamlananSiparisSayısı</div>
                                    <a href="/Order/TamamlananSiparisler" class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ayrıntılar<i class="fa fa-arrow-alt-circle-right"></i></a>

                                </div>

                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="far fa-thumbs-up  text-gray-500" style="mask-size:unset"></i>
                     

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1" style="text-align:center">
                                Paketlenen Siparis Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PaketlenenSiparisSayısı</div>
                            <a href="/Order/PaketlenenSiparisler" class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ayrıntılar<i class="fa fa-arrow-alt-circle-right"></i></a>

                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Kargolanan Siparişler
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.KargolananSiparisSayısı</div>
                                    <a href="/Order/KargolananSiparisler" class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ayrıntılar<i class="fa fa-arrow-alt-circle-right"></i></a>

                                </div>

                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dolly fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!-- Content Row -->

    

    <!-- Content Row -->


</div>

